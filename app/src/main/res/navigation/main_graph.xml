<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainScreen"
    >

    <fragment
        android:id="@+id/mainScreen"
        android:name="com.dracul.task.screens.main.MainFragment"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main"
        >
        <action
            android:id="@+id/actionPlug"
            app:destination="@id/plugFragment"
            app:enterAnim="@anim/fragment_enter"
            app:exitAnim="@anim/fragment_exit"
            app:popEnterAnim="@anim/fragment_enter_scale"
            app:popExitAnim="@anim/fragment_exit_scale"
            />
        <action
            android:id="@+id/actionTicketsOptions"
            app:destination="@id/ticketsOptionsFragment"
            app:enterAnim="@anim/fragment_enter"
            app:exitAnim="@anim/fragment_exit"
            app:popEnterAnim="@anim/fragment_enter_scale"
            app:popExitAnim="@anim/fragment_exit_scale"
            />
    </fragment>
    <fragment
        android:id="@+id/plugFragment"
        android:name="com.dracul.task.screens.plug.PlugFragment"
        android:label="fragment_plug"
        tools:layout="@layout/fragment_plug"
        />
    <fragment
        android:id="@+id/ticketsOptionsFragment"
        android:name="com.dracul.task.screens.ticketsoptions.TicketsOptionsFragment"
        android:label="fragment_tickets_options"
        tools:layout="@layout/fragment_tickets_options"
        >
        <argument
            android:name="from"
            app:argType="string"
            />
        <argument
            android:name="to"
            app:argType="string"
            />
    </fragment>
</navigation>