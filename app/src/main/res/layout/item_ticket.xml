<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/blue"
        >
        <TextView
            android:id="@+id/tv_most_comfortable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_regular"
            android:textStyle="italic"
            android:textSize="14sp"
            android:text="Самый удобный "
            android:layout_marginHorizontal="8dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        style="@style/Widget.Material3.CardView.Filled"
        app:cardBackgroundColor="@color/grey_1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="16dp"
                android:layout_weight="600"
                android:fontFamily="@font/sf_pro_sembold"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:text="6 9900 P"
                />

            <LinearLayout
                android:id="@+id/splitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_circle"
                    app:tint="@color/red"
                    android:layout_marginEnd="8dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_arrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_sembold"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        tools:text="03:15"
                        />

                    <TextView
                        android:id="@+id/tv_airport_arriv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_regular"
                        android:textColor="@color/grey_6"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        tools:text="VKO"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:text="—"
                    android:textColor="@color/grey_6"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_depar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_sembold"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        tools:text="03:15"
                        />

                    <TextView
                        android:id="@+id/tv_airport_depar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_regular"
                        android:textColor="@color/grey_6"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        tools:text="AER"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/sf_pro_sembold"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    tools:text="4ч в пути"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:text="/"
                    android:textColor="@color/grey_6"
                    />
                <TextView
                    android:id="@+id/tv_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sf_pro_sembold"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    tools:text="Без пересадок"
                    />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</FrameLayout>